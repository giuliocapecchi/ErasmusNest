<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.erasmusnest.controllers.UploadHouseController">
    <ScrollPane fitToWidth="true">
        <VBox spacing="10" style="-fx-border-color: orange; -fx-border-width: 2px; -fx-padding: 10px;">
            <Label text="House Name:" />
            <TextField fx:id="houseNameTextField" onKeyReleased="#checkFields"/>
            <Label text="Picture Url:" />
            <TextField fx:id="pictureUrlTextField" onKeyReleased="#checkFields"/>
            <Label text="Accommodates:" />
            <VBox fx:id="apartmentVBox">

            </VBox>
            <Label text="Bathrooms:" />
            <VBox fx:id="bathroomsVBox">

            </VBox>

            <Label text="Price per Month:" />
            <VBox fx:id="priceVBox">

            </VBox>

            <Label text="Neighbourhood Description:" />
            <VBox fx:id="neighborhoodVBox">

            </VBox>

            <TextField fx:id="addressTextField" onKeyReleased="#checkFields"/>
            <Button fx:id="geocodeButton" onAction="#onGeocodeButtonClick" style="-fx-background-color: #b4bd00; -fx-text-fill: white; -fx-padding: 5px 10px;" text="Check address" />
            <Label fx:id="geocodeResultLabel" layoutX="14.0" layoutY="53.0" prefHeight="7.0" prefWidth="624.0" textAlignment="CENTER" textFill="#ff0000" />
            <VBox fx:id="mapVBox"/>
            <Button fx:id="uploadButton" onAction="#onUploadButtonClick" style="-fx-background-color: orange; -fx-text-fill: white; -fx-padding: 5px 10px;" text="Upload" />
            <Button onAction="#onBackButtonClick" style="-fx-background-color: orange; -fx-text-fill: white; -fx-padding: 5px 10px;" text="Back" />
        </VBox>
    </ScrollPane>
</StackPane>

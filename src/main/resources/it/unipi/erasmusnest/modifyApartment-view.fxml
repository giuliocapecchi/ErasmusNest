<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane" prefHeight="554.0" prefWidth="652.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.erasmusnest.controllers.ModifyAparmentController">
    <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
        <VBox spacing="10" style="-fx-border-color: orange; -fx-border-width: 2px; -fx-padding: 10px;">
            <Label text="Accommodates:" />
            <VBox fx:id="apartmentVBox">

            </VBox>
            <Label text="Bathrooms:" />
            <VBox fx:id="bathroomsVBox">

            </VBox>

            <Label text="Price per Month:" />
            <VBox fx:id="priceVBox">

            </VBox>

            <Label text="Description:" />
            <VBox fx:id="neighborhoodVBox">

            </VBox>
         <Label layoutX="22.0" layoutY="134.0" text="Links to the pictures:" />

            <VBox fx:id="pictureUrlsVBox" />
            <HBox spacing="5">
                <Button fx:id="morePictureButton" onAction="#onMorePictureButtonClick" style="-fx-background-color: orange; -fx-text-fill: white; -fx-padding: 5px 10px;" text="Upload one more picture" />
                <Button fx:id="lessPictureButton" onAction="#onLessPictureButtonClick" style="-fx-background-color: #ff2600; -fx-text-fill: white; -fx-padding: 5px 10px;" text="Upload less pictures" />
            </HBox>

            <VBox fx:id="buttons">
                <Button fx:id="updateApartment" disable="true" onAction="#onUpdateApartmentButtonClick" text="Update House" />
                <Button fx:id="removeApartment" onAction="#onRemoveApartmentButtonClick" text="Remove House" />
                <Button onAction="#onGoBackButtonClick" text="Back to Profile" />
            </VBox>

        </VBox>
    </ScrollPane>
</StackPane>
